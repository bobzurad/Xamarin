<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="NetStatus.NetworkViewPage">
	<ContentPage.Content>

		<Grid Padding="0, 0" RowSpacing="1" ColumnSpacing="1" BackgroundColor="White">			
			<Grid.RowDefinitions>
				<RowDefinition Height="3*" />
				<RowDefinition Height="*"  />
				<RowDefinition Height="3*" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>

			<Label x:Name="ConnectionDetails"
					Grid.Row="1" Grid.Column="0"
					BackgroundColor="Green" TextColor="White" 
					HorizontalTextAlignment="Center" VerticalTextAlignment="Center" 
					FontSize="12">
				
			</Label>
		</Grid>

	</ContentPage.Content>
</ContentPage>
